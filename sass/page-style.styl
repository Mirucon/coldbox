.cdAdmin__section
  @media screen and (max-width: 782px)
    margin-right 10px
  @media screen and (min-width: 783px)
    margin-right 20px

.cdAdmin__header
  display flex
  flex-direction row
  flex-wrap wrap
  margin-right 10px
  padding 10px
  border-bottom 1px solid #ddd
  color #0000ff

.cdAdmin__themeName
  flex-grow 1
  font-size 2.4em
  line-height 1.4

.cdAdmin__screenshot
  justify-content flex-end
  align-self center
  img
    max-width 300px
    height auto
    text-align center

h2
  font-size 1.8em
  line-height 1.4

ul
  list-style-type disc
  padding-left 30px
  font-size 1.04em

p
  font-size 1.04em
