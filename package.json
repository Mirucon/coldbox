{
  "name": "coldbox",
  "version": "1.6.4",
  "description": "A beautiful WordPress theme.",
  "author": "Toshihiro Kanai (mirucon)",
  "license": "GPL-2.0+",
  "homepage": "https://coldbox.miruc.co/",
  "dependencies": {
    "highlight.js": "^9.12.0",
    "smoothscroll-polyfill": "^0.4.3"
  },
  "devDependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free": "^5.2.0",
    "autoprefixer": "^8.6.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-cli": "^5.0.1",
    "prettier": "^1.13.7",
    "prettier-eslint": "^8.8.2",
    "sass-loader": "^7.0.3",
    "showdown": "^1.8.6",
    "simple-icons": "^1.8.3",
    "style-loader": "^0.22.1",
    "stylus": "^0.54.5",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webfonts-loader": "^4.1.0",
    "webpack": "^4.15.0",
    "webpack-cli": "^3.0.8",
    "wp-pot": "^1.6.1"
  },
  "scripts": {
    "lint": "eslint assets/js/*.js",
    "fix": "eslint --fix assets/js/*.js",
    "pot": "mkdir -p languages && node bin/wppot.js",
    "copy": "bash bin/copy.sh",
    "md": "mkdir -p assets/html/ && showdown makehtml -i CHANGELOG.md -o assets/html/CHANGELOG.html",
    "scss:compile": "node-sass-chokidar --output-style expanded --source-map true sass/style.scss assets/css/style.css",
    "scss-dev:compile": "node-sass-chokidar --output-style compressed --source-map true sass/style.scss assets/css/style.min.css",
    "scss-dev:autoprefixer": "postcss assets/css/style.css --use autoprefixer -o assets/css/style.css",
    "scss-dev:build": "npm-run-all -s scss:compile scss-dev:autoprefixer",
    "scss:watch": "chokidar 'sass/*.scss' -c 'npm-run-all -p scss-dev:compile'",
    "scss:autoprefixer": "postcss --no-map assets/css/style.css --config postcss.config.js -o assets/css/style.min.css",
    "scss": "npm-run-all -s scss-dev:build scss:compile scss:autoprefixer",
    "editor-scss:compile": "node-sass-chokidar --output-style expanded --source-map true sass/editor-style.scss -o assets/css/",
    "editor-scss-dev:autoprefixer": "postcss assets/css/editor-style.css --use autoprefixer -o assets/css/editor-style.css",
    "editor-scss:autoprefixer": "postcss --no-map assets/css/editor-style.css --config postcss.config.js -o assets/css/editor-style.min.css",
    "editor-scss": "npm-run-all editor-scss:* editor-scss-dev:*",
    "page-stylus:compile": "stylus -m < sass/page-style.styl > assets/css/page-style.css",
    "page-stylus-dev:autoprefixer": "postcss assets/css/page-style.css --use autoprefixer -o assets/css/page-style.css",
    "page-stylus:autoprefixer": "postcss --no-map assets/css/page-style.css --config postcss.config.js -o assets/css/page-style.min.css",
    "page-stylus": "npm-run-all page-stylus:* page-stylus-dev:*",
    "czr-style:autoprefixer": "postcss --no-map assets/css/czr-style.css --config postcss.config.js -o assets/css/czr-style.min.css",
    "czr-style": "npm-run-all czr-style:*",
    "wp:dev": "webpack --mode development",
    "wp:build": "webpack --mode production",
    "wp:watch": "webpack --mode development -w",
    "watch": "npm-run-all -p scss:watch wp:watch",
    "build": "npm-run-all -p pot wp:build scss editor-scss page-stylus czr-style md && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirucon/coldbox"
  },
  "bugs": {
    "url": "https://github.com/mirucon/coldbox/issues"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
